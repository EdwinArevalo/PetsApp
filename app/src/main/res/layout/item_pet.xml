<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/img"
        android:background="@color/colorAccent"
        android:layout_width="10dp"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/content_sede"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:paddingLeft="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagenSede"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/pet"/>

        <TextView
            android:id="@+id/pet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imagenSede"
            android:drawableLeft="@drawable/ic_pets_black_24dp"
            android:drawablePadding="5dp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            tools:text="Nombre: Goofy"/>

        <TextView
            android:id="@+id/pet_raza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imagenSede"
            android:layout_below="@+id/pet_name"
            android:drawableLeft="@drawable/ic_pets_black_24dp"
            android:drawablePadding="5dp"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            tools:text="Raza: Terrier"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pet_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imagenSede"
            android:layout_below="@+id/pet_raza"
            android:drawableLeft="@drawable/ic_pets_black_24dp"
            android:drawablePadding="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Edad: 2 aÃ±os"/>



    </RelativeLayout>


</androidx.cardview.widget.CardView>